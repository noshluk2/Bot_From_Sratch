<launch>
    <param name="robot_description" textfile="$(find luqman_bot)/urdf/custom_bot.urdf" />
    <include file="$(find gazebo_ros)/launch/empty_world.launch"/>

    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model"
        args="-param robot_description -urdf -model explorer" />

    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find luqman_bot)/config/setting.rviz" />


    <node pkg="teleop_twist_keyboard" type="teleop_twist_keyboard.py" name="teleop_twist_keyboard" output="screen"/>


    <node pkg="gmapping" type="slam_gmapping" name="gmapping">
      <param name="base_frame" value="base_link" />
      <param name="odom_frame" value="odom" />
      <param name="delta" value="0.1" />
    </node>
    
    <node pkg="move_base" type="move_base" name="move_base" output="screen">
      <param name="controller_frequency" value="10.0" />
      <rosparam file="$(find luqman_bot)/config/costmap_common_params.yaml" command="load" ns="global_costmap"/>
      <rosparam file="$(find luqman_bot)/config/costmap_common_params.yaml" command="load" ns="local_costmap"/>
      <rosparam file="$(find luqman_bot)/config/local_costmap_params.yaml" command="load" />
      <rosparam file="$(find luqman_bot)/config/global_costmap_params.yaml" command="load" />
      <rosparam file="$(find luqman_bot)/config/trajectory_planner.yaml" command="load" />
    </node>


</launch>
